<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="750" d:DesignHeight="450"
             x:Class="Occlusion_Voice_Chat_CrossPlatform.avalonia.controls.MainWindowGradientTest">
    <Grid Width="750" Height="450">
        <Border 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            CornerRadius="15" 
            Grid.RowSpan="2" Grid.ColumnSpan="2"
            BoxShadow="0 0 30 10 #26000000">
            <Border.Background>
                <LinearGradientBrush StartPoint="0% 0%" EndPoint="10% 70%">
                    <ConicGradientBrush.GradientStops>
                        <GradientStop Offset="0" Color="#493a5c"></GradientStop>
                        <GradientStop Offset="1" Color="#3b3b47"></GradientStop>
                    </ConicGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
    </Grid>
</UserControl>
