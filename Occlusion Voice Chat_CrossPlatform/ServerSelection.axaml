<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="40"
             x:Class="Occlusion_Voice_Chat_CrossPlatform.ServerSelection" Cursor="Hand">
    <Grid>
        <StackPanel Name="ServerPanel" Orientation="Vertical" VerticalAlignment="Center">
          <Button Name="SelectionButton" Background="#454552" Margin="0" HorizontalContentAlignment="Left" Height="40" Width="150" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock Name="NameText" Margin="5 0 0 0" HorizontalAlignment="Left" FontSize="17">...</TextBlock>
            <Button.Styles>
              <Style Selector="Button /template/ ContentPresenter">
                <Setter Property="CornerRadius" Value="5" />
              </Style>
            </Button.Styles>
          </Button>
        </StackPanel>
    </Grid>
</UserControl>
